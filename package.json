{
  "name": "@d-buckner/peer-pressure",
  "description": "Simple one-to-one WebRTC video/voice and data channels",
  "version": "0.1.0",
  "author": {
    "name": "Daniel Buckner",
    "url": "https://d-buckner.org"
  },
  "bugs": {
    "url": "https://github.com/d-buckner/peer-pressure/issues"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "playwright": "^1.56.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "peer-to-peer",
    "data channel",
    "video",
    "voice",
    "typescript",
    "zero dependencies",
    "browser"
  ],
  "license": "MIT",
  "main": "dist/peer-pressure.umd.js",
  "module": "dist/peer-pressure.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/peer-pressure.es.js",
      "require": "./dist/peer-pressure.umd.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/d-buckner/peer-pressure.git"
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  }
}
