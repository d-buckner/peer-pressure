{
  "name": "@d-buckner/peer-pressure",
  "description": "Simple one-to-one WebRTC video/voice and data channels",
  "version": "0.2.0",
  "author": {
    "name": "Daniel Buckner",
    "url": "https://d-buckner.org"
  },
  "bugs": {
    "url": "https://github.com/d-buckner/peer-pressure/issues"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "playwright": "^1.56.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "peer-to-peer",
    "data channel",
    "video",
    "voice",
    "typescript",
    "zero dependencies",
    "browser"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/peer-pressure.js",
  "module": "./dist/peer-pressure.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/peer-pressure.js",
      "default": "./dist/peer-pressure.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/d-buckner/peer-pressure.git"
  },
  "scripts": {
    "build": "vite build",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.tests.json --noEmit",
    "pretest": "npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest"
  }
}
